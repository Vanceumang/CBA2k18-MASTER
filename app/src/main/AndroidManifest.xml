        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Tabs.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Tabs.ActivitySchedule"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Tabs.ActivityLeaderships"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Tabs.ActivityLocations"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Tabs.ActivityContact"
            android:screenOrientation="portrait" />
        <activity android:name=".Leaderships.CBA_Christian" />
        <activity android:name=".Leaderships.CBA_Culture" />
        <activity android:name=".Leaderships.CBA_Development" />
        <activity android:name=".Leaderships.CBA_Minister" />
        <activity android:name=".Leaderships.CBA_Mission" />
        <activity android:name=".Leaderships.CBA_Women" />
        <activity android:name=".Leaderships.CBA_Youth" />
        <activity android:name=".Leaderships.CBA_Officers" />
        <activity android:name=".Leaderships.CBA_Officers2" />


        <activity
            android:name=".Contacts.ContactsACBC"
            android:parentActivityName=".Tabs.ActivityContact" />
        <activity
            android:name=".Contacts.ContactsCatering"
            android:parentActivityName=".Tabs.ActivityContact" />
        <activity
            android:name=".Contacts.ContactsCommunication"
            android:parentActivityName=".Tabs.ActivityContact" />
        <activity
            android:name=".Contacts.ContactsHotels"
            android:parentActivityName=".Tabs.ActivityContact" />
        <activity
            android:name=".Contacts.ContactsHospitality"
            android:parentActivityName=".Tabs.ActivityContact" />
        <activity
            android:name=".Contacts.ContactsTransportation"
            android:parentActivityName=".Tabs.ActivityContact" />
